#include <bits/stdc++.h>
using namespace std;

int main(){
    char a;
    int n;
    cin>>a>>n;
    int total=0;
    int arr[n][n];
    int *ptr=&arr[0][0];
    for(int i=0;i<n*n;i++){
        *(ptr+i)=i+1;
    }
    switch(a){
        case 'z':
            for(int i=0;i<n;i++){
                for(int j=0;j<n;j++){
                    if (i==0 || i==n-1){
                        continue;
                    }
                    else if(i+j==n-1){
                       continue;
                    }
                    else{
                        arr[i][j]=0;
                    }
                }
                cout<<endl;
            }
            break;  
        case 'x':
            for(int i=0;i<n;i++){
                for (int j = 0; j < n; j++)
                {
                    if(i==j || i+j==n-1){
                        continue;
                    }
                    else{
                        arr[i][j]=0;
                    }
                }
                
            }break;
        case 'd':
            for(int i=0;i<n;i++){
                for (int j = 0; j < n; j++)
                {
                    if (i==0 || i==n-1){
                        if(j=n-1){
                            arr[i][j]=0;
                        }
                        continue;
                    }else if(j==0){
                        continue;
                    }else if(j==n-1 && i>0 && i<n-1){
                        continue;
                    }else{
                        arr[i][j]=0;
                    }
                }
                
            }break;
        case 'a':
            for(int i=0;i<n;i++){
                for (int j = 0; j < n; j++)
                {
                    if(i+j==n-1){
                        continue;
                    }
                    else{
                        arr[i][j]=0;
                    }
                }
            }break;
        default:
            cout<<"Invalid input"<<endl;
            break;
    }
    cout<<endl;
    cout<<endl;
    cout<<endl;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(arr[i][j]!=0){
                cout<<arr[i][j]<<" ";
                total+=arr[i][j];
            }else{
                cout<<" ";
            }
        }
        cout<<endl;
    }cout<<"Total sum :-"<<total<<endl;
    return 0;
}
